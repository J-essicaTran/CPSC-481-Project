@page "/requestInventory"

<div class="top-part">
    <BackButton/>
    <div class="top-bar">
        <i class="bi bi-book" style="color:#d3c2ae;font-size:50px;margin: 0 10px 0 20px;"></i>
        <p style="font-size: 40px;margin: 5px 0 0 0;">Request Inventory</p>
    </div>
</div>
<div class="bottom-part">
    <div class="content">
        <p style="font-size: 30px;margin:0;">Enter Title of the Item You're Requesting</p>
        <input type="text" class="homepage-searchbar" placeholder="Enter Title of Item..." />
        <p style="font-size: 14px;margin:0;">*The Library <i><u>does not</u></i> guarantee that the requested item will be added to the inventory.</p>
        <br>
        <button style="padding: 0 30px 0 30px;">Submit</button>
    </div>
</div>

